<%if @song && @song.errors.any?%>
  <div>
    <strong>There is some missing information:</strong>
    <ul>
      <%@song.errors.full_messages.each do |message|%>
        <li><%= message %></li>
      <%end%>
    </ul>
  </div>
<%end%>

 <form method='post' action='/songs'>
